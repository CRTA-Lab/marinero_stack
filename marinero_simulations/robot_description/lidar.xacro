    <!-- FRONT 2D LIDAR -->

    <gazebo reference="front_lidar_2D_link">
        <sensor name="front_2D_lidar" type="gpu_ray">
            <pose> 0 0 0 0 0 0 </pose>
            <update_rate>10.0</update_rate>
            <visualize>false</visualize>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.57</min_angle>
                        <max_angle>1.57</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.25</min>
                    <max>10</max>
                    <resolution>0.01</resolution>
                </range>
            </ray>
            <plugin name="front_laser_2D_plugin" filename="libgazebo_ros_ray_sensor.so">
                <ros>
                    <remapping>~/out:=/front_scan</remapping>
                </ros>
                <update_rate>10.0</update_rate>
                <output_type>sensor_msgs/LaserScan</output_type>
                <frame_name>front_lidar_2D_link</frame_name>
            </plugin>
        </sensor>
    </gazebo>

    <!-- REAR 2D LIDAR -->

    <gazebo reference="rear_lidar_2D_link">
        <sensor name="rear_2D_lidar" type="gpu_ray">
            <pose> 0 0 0 0 0 0 </pose>
            <update_rate>10.0</update_rate>
            <visualize>false</visualize>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.57</min_angle>
                        <max_angle>1.57</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.25</min>
                    <max>10</max>
                    <resolution>0.01</resolution>
                </range>
            </ray>
            <plugin name="rear_laser_2D_plugin" filename="libgazebo_ros_ray_sensor.so">
                <ros>
                    <remapping>~/out:=/rear_scan</remapping>
                </ros>
                <update_rate>10.0</update_rate>
                <output_type>sensor_msgs/LaserScan</output_type>
                <frame_name>rear_lidar_2D_link</frame_name>
            </plugin>
        </sensor>
    </gazebo>

</robot>